# GhostPost Configuration
# Copy to .env and fill in real values

# Database
DATABASE_URL=postgresql+asyncpg://ghostpost:CHANGE_ME@localhost:5432/ghostpost
DATABASE_URL_SYNC=postgresql://ghostpost:CHANGE_ME@localhost:5432/ghostpost

# Redis
REDIS_URL=redis://localhost:6379/1

# Auth
JWT_SECRET=CHANGE_ME
ADMIN_USERNAME=athena
ADMIN_PASSWORD_HASH=CHANGE_ME

# Gmail API
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKEN_FILE=token.json

# LLM via OpenClaw gateway — routes to ghostpost agent (MiniMax M2.5)
LLM_GATEWAY_URL=http://127.0.0.1:18789/v1/chat/completions
LLM_GATEWAY_TOKEN=CHANGE_ME
LLM_MODEL=openclaw:ghostpost
LLM_USER_ID=ghostpost-app

# Ghost Research — Web Search (Serper API)
SEARCH_API_KEY=CHANGE_ME
SEARCH_API_URL=https://google.serper.dev/search

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
